<brand>

<!-- Used in various locations throughout the interface.
     Translate to another script by adding the xml:lang attribute. -->
<softwarename>Pandion</softwarename>
<softwarename xml:lang="ar">بانديون</softwarename>
<softwarename xml:lang="bg">Пандион</softwarename>
<softwarename xml:lang="hi">पैन्डीऑन</softwarename>
<softwarename xml:lang="ja">パンディオン</softwarename>
<softwarename xml:lang="ru">Пандион</softwarename>
<softwarename xml:lang="ur">پندین</softwarename> 
<softwarename xml:lang="vn">Pan-di-on</softwarename>
<softwarename xml:lang="zh">潘迪安</softwarename>

<!-- Used as name of files and directories.
     Must not contain / \ : * ? " < > |
	 Should not be transliterated. -->
<softwarenamesafe>Pandion</softwarenamesafe>

<!-- Major and minor version (x.y) of the application.
     Build number is appended automatically from built.txt. -->
<softwareversion>2.6</softwareversion>

<!-- Type of updates to auto-install (stable/beta/development)
     The track is determined automatically from the update feed. -->
<softwaretrack>stable</softwaretrack>

<!-- Shown in the About dialog -->
<copyrightholder>Contributors</copyrightholder>
<copyrightyear>2001-2009</copyrightyear>
<softwareurl>http://www.pandion.be/</softwareurl>
<licensename>GNU General Public License 3 or later</licensename>
<licenseurl>http://www.gnu.org/licenses/gpl-3.0.html</licenseurl>
<termsandcontitionsurl>http://www.pandion.be/about</termsandcontitionsurl>
<trademarkholder>Sebastiaan Deckers</trademarkholder>

<!-- Connect to this XMPP server and use SSPI (Kerberos/NTLM) to authenticate without user interaction -->
<sspiserver></sspiserver>

<!-- Only connect to this server and only create accounts on this server.
     Overrides anything entered by a user. -->
<fixedserver></fixedserver>

<!-- Shown in the Help menu -->
<helpcontact>http://www.pandion.be/about</helpcontact>
<helpforum>http://getsatisfaction.com/pandion</helpforum>
<helpmanual>http://pandion.pbworks.com/</helpmanual>

<!-- URI of extras -->
<pluginlist>http://plugins.pandion.be/</pluginlist>
<emoticonlist>http://emoticons.pandion.be/</emoticonlist>
<backgroundlist>http://backgrounds.pandion.be/</backgroundlist>

<!-- URI of software version checker (Atom 1.0 + Appcaster) -->
<autoupdate>http://feeds.feedburner.com/pandionupdates</autoupdate>
<installupdates>yes</installupdates> <!-- yes/no -->

<!-- Shown in the Welcome screen -->
<welcomescreen>yes</welcomescreen>
<welcomefeedurl>http://feeds.feedburner.com/pandiongetsatisfaction</welcomefeedurl>
<welcomesearchurl>http://getsatisfaction.com/pandion/searches?query=${query}&amp;commit=Search</welcomesearchurl>
<twittername>pandion</twittername>
<facebookpage>pandion.im</facebookpage>
<getsatisfactioncompany>pandion</getsatisfactioncompany>
<browserhomepage>http://search.pandion.be/</browserhomepage>
<browsersearchboxname>Pandion Search</browsersearchboxname>
<browsersearchboxurl>http://search.pandion.be/?q=%s</browsersearchboxurl>

<!-- URI of a web page to replace the Sign Up dialog -->
<websignup></websignup>

<!-- URI of a web page to replace the Change my Password dialog -->
<passwordpage></passwordpage>

<!-- Connection settings dialog -->
<serveraddress></serveraddress>
<serverport></serverport>
<encryption>optional</encryption> <!-- optional/tls/ssl/none -->
<authentication>normal</authentication> <!-- normal/ntlm -->

